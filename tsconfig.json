{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@env": [".env"],
      "@/*": ["src/*"]
    },
    "types": ["jest", "node", "@testing-library/jest-native"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native"
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "jest.setup.js",
    "*.js"
, "jest.config.js"  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "android",
    "ios",
    "dist"
  ]
}